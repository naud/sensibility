"""
test_sensors.repy -- trying to use the SL4A JSON bridge to read sensors

"""


dy_import_module_symbols("sensorutil")
dy_import_module_symbols("sensor")

if callfunc=="initialize":
  try:
    ap_port = int(callargs[0])
  except:
    # Not castable (-> ValueError) or missing at all (-> IndexError) 
    usage()
    exitall()
  
  # set up connection to sl4a 
  sl4a_socket = openconnection("127.0.0.1", ap_port, "127.0.0.1", 12345, 5)
  
  while True:
    log("start recording sensor data:\n")
    result = sensor_start_sensing(sl4a_socket, 1, 30)
    log(result + '\n\n')
    
    log("read sensor data:\n")
    sleep(2)
    result = sensor_read(sl4a_socket)
    log(result + '\n\n')
    
    log("get sensor accuracy:\n")
    result = sensor_get_accuracy(sl4a_socket)
    log(result + '\n\n')
    
    log("get light value:\n")
    result = sensor_get_light(sl4a_socket)
    log(result + '\n\n')
    
    log("get accelerometer value:\n")
    result = sensor_read_accelerometer(sl4a_socket)
    log(result + '\n\n')
    
    log("get magnetometer value:\n")
    result = sensor_read_magnetometer(sl4a_socket)
    log(result + '\n\n')
    
    log("get orientation value:\n")
    result = sensor_read_orientation(sl4a_socket)
    log(result + '\n\n')    
    
    log("stop recording sensor data:\n")
    result = sensor_stop_sensing(sl4a_socket)
    log(result + '\n\n')
    
    sleep(10)
    
  sl4a_socket.close()

